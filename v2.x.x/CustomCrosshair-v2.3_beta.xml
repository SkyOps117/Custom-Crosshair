<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Crosshair>

<bethesda>
	<enable>false</enable>
	
</bethesda>

<Colors>
  <OnTarget>
	<ColorChange>
	  <RGB>ff0000</RGB>
	  <Brightness>-25</Brightness>
	  <Saturation>35</Saturation>
	  <Contrast>0</Contrast>
	</ColorChange>
	<Glow>
	  <RGB>ff00ff</RGB>
	</Glow>
  </OnTarget>
  <OffTarget>
	  <ColorChange>
		  <RGB>00CAFF</RGB>
		  <Brightness>0</Brightness>
		  <Saturation>50</Saturation>
		  <Contrast>0</Contrast>
	  </ColorChange>
	  <Glow>
		  <RGB>BA00FF</RGB>
	  </Glow>
  </OffTarget>
</Colors>

<Filters>
	<Glow>
		<Visible>true</Visible>
		<Length>8</Length>
		<Strength>1.2</Strength>
	</Glow>
	<InnerShadow>
		<Visible>false</Visible>
	</InnerShadow>
	<OuterShadow>
		<Visible>true</Visible>
	</OuterShadow>
</Filters>

<part state="GUN">
	<dot>
		<enable>false</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>true</enable>
		<gap>8</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
</part>

<part state="MELEE">
	<dot>
		<enable>true</enable>
		<size>3</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>12</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
</part>

<part state="ACTIVATE">
	<dot>
		<enable>false</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>true</enable>
		<radius>8</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>true</enable>
		<gap>16</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
</part>

<part state="SIGHT">
	<dot>
		<enable>true</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>8</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
</part>

</Crosshair>